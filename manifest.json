{
    "manifest_version": 3,
    "name": "GoSFU Improvement",
    "version": "1.0",
    "description": "To Enhance your go.sfu experience!",
    "permissions": [
      "activeTab",
      "scripting",
      "tabs"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["https://www.sfu.ca/*", "https://sims.erp.sfu.ca/*", "https://cas.sfu.ca/*","https://coursys.sfu.ca/*"],
        "js": ["content.js"],
        "css": ["styles.css"]
      }
    ],
    "web_accessible_resources": [
    {
      "resources": ["images/*", "assets/*"],
      "matches": ["<all_urls>"]
    }
    ]
  }